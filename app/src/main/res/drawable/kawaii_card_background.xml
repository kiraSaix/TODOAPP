<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#15000000"
                android:endColor="@android:color/transparent"
                android:angle="90" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFF8FA"
                android:angle="135" />
            <stroke
                android:width="1.5dp"
                android:color="#FFE0E9" />
        </shape>
    </item>

    <!-- Top right decorative heart -->
    <item android:right="12dp" android:top="12dp">
        <rotate android:fromDegrees="-15">
            <shape android:shape="oval">
                <size android:width="8dp" android:height="8dp" />
                <solid android:color="#FFB7D0" />
            </shape>
        </rotate>
    </item>

    <!-- Bottom left star -->
    <item android:left="12dp" android:bottom="12dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <size android:width="6dp" android:height="6dp" />
                <solid android:color="#FFC6D6" />
            </shape>
        </rotate>
    </item>
</layer-list> 