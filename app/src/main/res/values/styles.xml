<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="KawaiiTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowBackground">@color/background_pink_light</item>
        <item name="colorPrimary">@color/accent_pink</item>
        <item name="colorPrimaryDark">@color/accent_pink_dark</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="android:statusBarColor">@color/accent_pink_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Cute Card Style -->
    <style name="KawaiiCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/kawaii_card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Cute Dialog Style -->
    <style name="CuteDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="materialButtonStyle">@style/CuteButton</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_out</item>
    </style>

    <style name="CuteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/accent_pink</item>
        <item name="rippleColor">@color/accent_pink_light</item>
    </style>

    <style name="CuteTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">sans-serif</item>
        <item name="boxStrokeColor">@color/accent_pink</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="hintTextColor">@color/accent_purple</item>
    </style>

    <style name="CuteText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CuteText.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/accent_purple</item>
    </style>

    <style name="CuteText.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/accent_pink</item>
    </style>

    <style name="CuteDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/accent_purple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CuteDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CuteDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/accent_pink_light</item>
    </style>
</resources> 